<h1>All Listings</h1>

<h3>Search for a listing:</h3>

<%= form_tag listings_path, :method => :get do %>
  <%= label_tag "Search" %>
  <%= text_field_tag :search %>
  <%= submit_tag "Submit" %>
<% end %>

<% @listings.each do |listing| %>
  <%= link_to listing.name, listing_path(listing) %>
  <%= button_to 'Add To Cart', controller: 'transactions', action: 'add' %>

<%end%>
