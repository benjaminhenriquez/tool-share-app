<h1>All Listings</h1>

<h3>Search for a listing:</h3>

<%= form_tag listings_path, :method => :get do %>
  <%= label_tag "Search" %>
  <%= text_field_tag :search %>
  <%= submit_tag "Submit" %>
<% end %>
<br />
<table>
  <tr>
    <th>Listing Name</th>
    <th>Tool</th>
    <th>Cost</th>
    <th>Notes</th>
  </tr>
<% @listings.each do |listing| %>
  <tr>
    <td><%= link_to listing.name, listing_path(listing) %></td>
    <td><%= listing.tool_name %></td>
    <td><%= listing.cost %></td>
    <td><%= listing.notes %></td>
  </tr>
<%end%>
</table>
<br />
<%= button_to 'Return to Your Page', user_path(session[:user_id]), :method => :get  %>