<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error") %>
      prohibited this listing from being saved:
    </h2>

    <ul>
    <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%=form_for @listing do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :notes %>
  <%= f.text_field :notes %>
  <br>
  What tool do you want to list?
  <br>

  <%= f.select :tool_id, Tool.without_listings.map {|tool| [tool.name, tool.id]} %>
  <%=f.submit%>


<% end %>
