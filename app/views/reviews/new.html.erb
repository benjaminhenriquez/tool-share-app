<h1>Create a new review</h1>

<%= form_for @review do |f| %>
  <p>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </p>
  <p><%= f.label :content %>
    <%= f.text_field :content %>
  </p>
  <p>
    What tool do you want to review?
    <br>
    <select name="review[tool_id]">
      <% @tools.map do |tool| %><option value="<%=tool.id%>">
        <%=tool.name%></option>
        <%end%>
      </select>
  
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
