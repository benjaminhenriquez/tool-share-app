<h1>Tool Information</h1>
  <ul>
    <li>Name: <%= @tool.name %></li>
    <li>Safety Level: <%= @tool.safety_level %></li>
    <li>Portability: <%= @tool.portability %></li>
    <li>Condition: <%= @tool.condition %></li>
  </ul>


  <%= button_to 'Edit Tool', edit_tool_path(@tool), :method => :get %>
  <%= button_to 'Delete Tool', tool_path(@tool), :method => :delete  %>
  <%= button_to 'New Listing', new_listing_path, :method => :get  %>
  <%= button_to 'Return to Your Page', user_path(@tool.lender_id), :method => :get  %>
